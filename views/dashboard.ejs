<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%- include('_link.ejs') %>
    <title>Dashboard</title>
</head>

<body>
  <div class="navbar bg-base-100">
    <div class="flex-1">
        <a class="btn btn-ghost normal-case text-xl">Belajar Bang</a>
    </div>
    <div class="flex-none">
        <div class="dropdown dropdown-end">
            <label tabindex="0" class="btn btn-ghost btn-circle">
                <div class="indicator">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                    <span class="badge badge-sm indicator-item">8</span>
                </div>
            </label>
            <div tabindex="0" class="mt-3 card card-compact dropdown-content w-52 bg-base-100 shadow">
                <div class="card-body">
                    <span class="font-bold text-lg">8 Items</span>
                    <span class="text-info">Subtotal: $999</span>
                    <div class="card-actions">
                        <button class="btn btn-primary btn-block">View cart</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="dropdown dropdown-end">
            <label tabindex="0" class="btn btn-ghost btn-circle avatar">
                <div class="w-10 rounded-full">
                    <img src="/images/stock/photo-1534528741775-53994a69daeb.jpg" />
                </div>
            </label>
            <ul tabindex="0" class="menu menu-compact dropdown-content mt-3 p-2 shadow bg-base-100 rounded-box w-52">
                <li>
                    <a href="/profile/:profileId" class="justify-between">
                        Profile
                        <span class="badge">New</span>
                    </a>
                </li>
                <li><a>Logout</a></li>
            </ul>
        </div>
    </div>
</div>

    <div style="margin-top: 30px; margin-left: 550px; margin-bottom: 30px;">
      <a href="/dashboard/addCourse"><button class="btn btn-outline btn-wide">Add Course</button></a>
    </div>

    
    <div class="overflow-x-auto w-full px-10">
      <table class="table w-full">
        <!-- head -->
        <thead>
          <tr>
            <th>Course Name</th>
            <th>Category</th>
            <th>Price</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <!-- row 1 -->
          <% courses.forEach(el=> { %>
            <tr>
              <td>
                <div class="flex items-center space-x-3">
                  <div class="avatar">
                    <div class="mask mask-squircle w-12 h-12">
                      <img src="<%= el.imageUrl %>" alt="Avatar Tailwind CSS Component" />
                    </div>
                  </div>
                  <div>
                    <div class="font-bold"><%= el.courseName %></div>
                    <div class="text-sm opacity-50">Offline/Remote</div>
                  </div>
                </div>
              </td>
              <td>
                <%= el.category %>
                <br/>
                <span class="badge badge-ghost badge-sm">Duration: 10 year like a Steve Jobs so you can get the Jobs as a "Fullstack Brain"</span>
              </td>
              <td><%= moneyFormattedIdr(el.price) %></td>
              <td>
                <div class="card-actions justify-end">
                  <a href="/dashboard/edit/<%= el.id %>"><button class="btn btn-outline-secondary btn-xs">Edit</button></a>
                </div>
                <div class="card-actions justify-end">
                  <a href="/dashboard/delete/<%= el.id %>"><button class="btn btn-outline-secondary btn-xs">Delete</button></a>
                </div>
              </td>
            </tr>
            <% }) %>
            <!-- row 2 -->
            
        </table>
      </div>
      

</body>

</html>